    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/soundwatch"
            android:textColor="@color/colorTextDefault"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/feedback_button"
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_gravity="bottom"
            android:background="@drawable/ic_baseline_rate_review_24"
            android:backgroundTint="@color/colorAccent"
            android:contentDescription="@string/feedback_button_desc"
            android:onClick="onFeedbackButtonClick"
            android:foreground="?android:attr/selectableItemBackground"
            android:theme="@android:style/ThemeOverlay.Material.Dark"
            />

        <!--        <Button-->
        <!--            android:id="@+id/feedback_button"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginEnd="@dimen/_10ssp"-->
        <!--            android:layout_gravity="bottom"-->
        <!--            android:text="@string/feedback_button_desc"-->
        <!--            android:textColor="@color/colorTextDefault"-->
        <!--            android:textSize="@dimen/_8ssp"-->
        <!--            android:background="@android:color/transparent"-->
        <!--            android:drawableTop="@drawable/ic_baseline_rate_review_24"-->
        <!--            android:drawableTint="@color/colorAccent"-->
        <!--            />-->

    </LinearLayout>

    <TextView
        android:id="@+id/instruction_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="@string/instruction"
        android:textColor="@color/common_google_signin_btn_text_dark"
        android:textSize="@dimen/_12ssp" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav_view"
        android:layout_below="@+id/title" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav_view"
        android:layout_below="@+id/instruction_text"
